<!DOCTYPE html>
<html>
<head>

    <!-- Standard Meta -->
    <meta charset="utf-8"/>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">

    <title>{% block title %}Welcome!{% endblock %}</title>
    {% block stylesheets %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>

    <link rel="stylesheet" type="text/css" href="{{ asset('assets/public/css/semantic.min.css') }}">
    <!--
    <link rel="stylesheet" type="text/css" href="{{ asset('assets/public/css/homepage.css') }}">

    <link rel="stylesheet" type="text/css" href="{{ asset('assets/public/iconfonts/flaticon.css') }}">-->

    <script src="{{ asset('http://cdnjs.cloudflare.com/ajax/libs/jquery/2.0.3/jquery.js') }}"></script>
    <script src="{{ asset('assets/public/js/semantic.min.js') }}"></script>
    <script src="{{ asset('assets/public/js/homepage.js') }}"></script>
    <script>
        $(function () {
            $('.ui.card').popup();
        });
    </script>
    {% endblock %}
</head>
<body id="home">

        <div class="ui menu">
            <a class="item" href="{{ path('site_default_index') }}">
                Home
            </a>
            <div class="ui pointing dropdown link item">
                <span class="text">Shopping</span>
                <i class="dropdown icon"></i>
                <div class="menu">
                    <div class="header">Categories</div>
                    <div class="item">
                        <i class="dropdown icon"></i>
                        <span class="text">Clothing</span>
                        <div class="menu">
                            <div class="header">Mens</div>
                            <div class="item">Shirts</div>
                            <div class="item">Pants</div>
                            <div class="item">Jeans</div>
                            <div class="item">Shoes</div>
                            <div class="divider"></div>
                            <div class="header">Womens</div>
                            <div class="item">Dresses</div>
                            <div class="item">Shoes</div>
                            <div class="item">Bags</div>
                        </div>
                    </div>
                    <div class="item">Home Goods</div>
                    <div class="item">Bedroom</div>
                    <div class="divider"></div>
                    <div class="header">Order</div>
                    <div class="item">Status</div>
                    <div class="item">Cancellations</div>
                </div>
            </div>
            <a class="item" href="{{ path('ensaios') }}">
                Ensaios
            </a>
            <a class="item" href="{{ path('contato') }}">
                Contato
            </a>
        </div>

    {% block body %}{% endblock %}


{% block javascripts %}{% endblock %}
</body>
</html>

